        <link rel="stylesheet" href="{{ absolute_url(asset('plugins/toastr/toastr.min.css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('plugins/overlayScrollbars/css/OverlayScrollbars.min.css')) }}">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <body class="hold-transition layout-top-nav">
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
                <div class="container">
                <a href="{{ path('preinscriptionIndex') }}" class="navbar-brand">
                    <img src="{{ absolute_url(asset('dist/img/logo_getin_mini.png')) }}" alt="AdminLTE Logo" class=""
                        style="opacity: .8">
                </a>
                
                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="{{ path('preinscriptionIndex') }}" class="nav-link">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('aide_contact') }}" class="nav-link">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- /.navbar -->

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container">
                        <div class="row mb-2 title-contenair">
                            <div class="col-sm-6">
                                {% block pageTitle %}<h1 class="m-0 text-dark">GETIN <small>></small> Preins <small>{% block titleContent %}{% endblock %}</small></h1>{% endblock %}
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    {% block fil_ariane %}
                                        
                                    {% endblock %}
                                </ol>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->

                <!-- Main content -->
                {% block mainContent %}
                    <img id="bg-page" src="{{ asset('dist/img/logo_getin.jpg') }}" style="width: 100%;position:absolute;opacity:.7;top:0px" alt="">
                    <div class="content">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">{% block contentTitle %}{% endblock %}</h5>
                                            <div class="card-text">
                                                {% block pageContent %}{% endblock %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div><!-- /.container-fluid -->
                    </div>
                {% endblock %}
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->

            <!-- Main Footer -->
            <footer class="main-footer">
                <div class="float-right d-none d-sm-block">
                <b>Version</b> 2.0.1
                </div>
                <strong>Copyright &copy; 2019 <a href="">MetCorp</a>.</strong> All rights
                reserved.
            </footer>
            {% include "includes_for_base_template/modals.html.twig" %}
        </div>
        <!-- ./wrapper -->

        <!-- REQUIRED SCRIPTS -->

        <!-- jQuery -->
        <script src="{{ absolute_url(asset('plugins/jquery/jquery.min.js')) }}"></script>
        <!-- Bootstrap 4 -->
        <script src="{{ absolute_url(asset('plugins/bootstrap/js/bootstrap.bundle.min.js')) }}"></script>
        <!-- Select2 -->
        <script src="{{ absolute_url(asset('plugins/select2/js/select2.full.min.js')) }}"></script>
        <!-- SweetAlert2 -->
        <script src="{{ absolute_url(asset('plugins/sweetalert2/sweetalert2.min.js')) }}"></script>
        <!-- Toastr -->
        <script src="{{ absolute_url(asset('plugins/toastr/toastr.min.js')) }}"></script>
        <!-- overlayScrollbars -->
        <script src="{{ absolute_url(asset('plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js')) }}"></script>
        <!-- AdminLTE App -->
        <script src="{{ absolute_url(asset('dist/js/adminlte.min.js')) }}"></script>
        <script>
            let $filiere;
            let $specialite;
            let $level;
            const $successSon = '{{ absolute_url(asset("sons/son3.mp3")) }}';


            $('select').addClass('select2');

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
            //Initialize Select2 Elements
            $('.select2').select2();

            $('body, .scrollBar').overlayScrollbars({
                className: "os-theme-dark"
            });
        </script>

        {% if inscription is defined and inscription.etudiant is defined and inscription.etudiant is not null and inscription.etudiant.departement is defined and inscription.etudiant.departement is not null and inscription.etudiant.departement.region is defined and inscription.etudiant.departement.region is not null %}
            <script>
                var $regions = $('#etudiant_inscris_etudiant_region option');
                var idRegion = "{{ inscription.etudiant.departement.region.id }}";
                for (var i=0; i< $regions.length; i++) {
                    if ($($regions[i]).prop('value') == idRegion) {
                        $($regions[i]).prop('selected', true);
                    }
                }
            </script>
        {% endif %}
        
        <script>
            var fetchDepartementUrl = "{{ path('home_fetchDepartementUrl') }}";
            var selectRegionText = "{{ 'Sélectionner une région' }}";
            let $loader = $('#modal-overlay');
            function showLoader(status=true) {
                if (status) {
                    $loader.modal('show');
                }
                else {
                    $loader.modal("hide");
                }
            }
        </script>

        <script src="{{ absolute_url(asset('js/inscription_etudiant.js')) }}"></script>
        {% block js %}
            
        {% endblock %}
    </body>
</html>
