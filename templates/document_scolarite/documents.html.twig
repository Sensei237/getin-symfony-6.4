
<html>
    <head>
        <meta charset="UTF-8">
        {% if isForQuitusPaiement is defined %}
            <style>
                .line{
                    border: 2px #222 dashed;
                    margin-top: 20px;
                    margin-bottom: 15px;
                }
                img{
                    width: 100%;
                }
                table{
                    border: none;
                }
                .page {
                    max-width: 210mm;
                    width: auto;
                    margin-bottom: 50px;
                    position: relative;
                    page-break-after: auto !important;
                    margin-left: auto;
                    margin-right: auto;
                    text-transform: uppercase;
                }
                .page{
                    padding: 10px auto;
                }
                
                @page{
                    margin: 10px 30px 10px 30px !important;
                }
                .header{
                    text-align: center;
                    font-weight: 900;
                    font-size: 12px;
                }
                .header h1{
                    font-size: 12px;
                    font-weight: 900;
                    text-align: center;
                }
                .header h2 {
                    font-size: 10px;
                    font-weight: 900;
                    text-align: center;
                }
                .header h2, .header h1, .header p{
                    margin: 0px;
                }
                .header p{
                    text-transform: none;
                }
                .coupons div{
                    display: inline-block;
                    width: auto;
                    text-transform: none;
                }
                .quitus-content td{
                    vertical-align: top;
                }
                .quitus-content {
                    font-size: 14px;
                }
            </style>
        {% elseif isForCertificatsScolarites is defined %}
            <style>
                .page {
                    max-width: 210mm;
                    width: auto;
                    margin-bottom: 50px;
                    position: relative;
                    page-break-after: auto !important;
                    margin-left: auto;
                    margin-right: auto;
                    text-transform: uppercase;
                }
                .page{
                    padding: 10px auto;
                }
                
                @page{
                    margin: 10px 50px 30px 50px !important;
                }
                .head, .head h5, .head h2, .head h3, .head h4, .head h1, .head h6 {
                    font-weight: 900;
                }
                .head table {
                    border: none;
                }
                .head table td h3{
                    font-size: 16px;
                    margin: 0px;
                }
                .head table td h4{
                    font-size: 12px;
                    margin: 0px;
                }
                .head table td h5{
                    font-size: 12px;
                    margin: 0px;
                }
                .head table {
                    text-align: center;
                }
                .head table img{
                    width: 100px;
                    height: 100px;
                    margin-bottom: 5px;
                }
                .title {
                    text-align: center;
                    font-weight: bold;
                    font-family: 'Times New Roman', Times, serif;
                    margin-bottom: 20px;
                    text-transform: uppercase;
                }
                .title h1 {
                    font-size: 30px;
                    font-weight: 900;
                    margin: 0px;
                }
                .title h2 {
                    font-size: 25px;
                    font-style: italic;
                    margin: 0px;
                }
                .content {
                    text-transform: none !important;
                    font-size: 17px;
                    font-family: Arial, Helvetica, sans-serif;
                }
                .content p{
                    margin: 10px;
                }
            </style>
        {% endif %}
        
    </head>
    <body>

        {% for inscription in etudiants %}
            {% if isForCertificatsScolarites is defined %}
                {% include "document_scolarite/certificat_model.html.twig" %}
            {% elseif isForQuitusPaiement is defined %}
                {% include "document_scolarite/quitus_model.html.twig" %}
            {% endif %}
        {% endfor %}

    </body>
</html>